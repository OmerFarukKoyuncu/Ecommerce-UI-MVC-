@using ANK19_ETicaretMVC.Areas.Admin.Models.UserViewModels
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model UpdateUserViewModel

@{
    var userId = TempData["id"];
}

<!-- Sayfa Başlığı -->
<h1 class="text-center my-4">Kullanıcı Güncelle</h1>

<!-- Bootstrap CSS CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-pzjw8f+ua7Kw1TIq0sVfIVo3dM8n0i8q2mT1U3qxV6tqD5Vg5+MdzTZ9aZu+z6lA" crossorigin="anonymous">

<!-- Form Başlangıcı -->
<form asp-area="Admin" asp-controller="User" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="card shadow-sm">
        <div class="card-body">

            <!-- Kullanıcı Adı ve Şifre -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="addUserName">Kullanıcı Adı</label>
                        <input type="text" class="form-control" id="addUserName" name="UserName" value="@Model.UserName" required />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="addPassword">Şifre</label>
                        <input type="password" class="form-control" id="addPassword" name="@Model.Password" />
                    </div>
                </div>
            </div>

            <!-- Email ve Ad -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="addEmail">Email</label>
                        <input type="email" class="form-control" id="addEmail" name="Email" value="@Model.Email" required />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="addFirstname">Ad</label>
                        <input type="text" class="form-control" id="addFirstname" name="Firstname" value="@Model.Firstname" required />
                    </div>
                </div>
            </div>

            <!-- Soyad ve İkinci Ad -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="addLastname">Soyad</label>
                        <input type="text" class="form-control" id="addLastname" name="Lastname" value="@Model.Lastname" required />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="addSecondName">İkinci Ad</label>
                        <input type="text" class="form-control" id="addSecondName" name="SecondName" value="@Model.SecondName" />
                    </div>
                </div>
            </div>

            <!-- İkinci Soyad ve Adres -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="addSecondLastname">İkinci Soyad</label>
                        <input type="text" class="form-control" id="addSecondLastname" name="SecondLastname" value="@Model.SecondLastname" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="addAddress">Adres</label>
                        <input type="text" class="form-control" id="addAddress" name="Address" value="@Model.Address" required />
                    </div>
                </div>
            </div>

            <!-- Fotoğraf -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="addPhoto">Fotoğraf</label>
                        <input type="file" class="form-control" id="addPhoto" name="Photo" />
                    </div>
                </div>
            </div>

            <!-- Email Onaylı ve Aktif Durum -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group form-check">
                        <input class="form-check-input" type="checkbox" asp-for="EmailConfirmed" />
                        <label class="form-check-label" for="addEmailConfirmed">
                            @Html.DisplayNameFor(model => model.EmailConfirmed)
                        </label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-check">
                        <input class="form-check-input" type="checkbox" asp-for="IsActive"/>
                        <label class="form-check-label" for="addIsActive">
                            @Html.DisplayNameFor(model => model.IsActive)
                        </label>
                    </div>
                </div>
            </div>

            <input type="hidden" name="id" value="@userId"></input>
            <!-- Güncelleme Düğmesi -->
            <button type="submit" class="btn btn-primary btn-block">Güncelle</button>
        </div>
    </div>

    <!-- Listeye Dön Linki -->
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </div>
</form>

<!-- Bootstrap JS CDN -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-cu2zyrJZXDh0xqBxlk2UMRNEj+/ApK4t+pXnfrYZ6UfqNkt+xWlKn+m2iUt39oV7" crossorigin="anonymous"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
