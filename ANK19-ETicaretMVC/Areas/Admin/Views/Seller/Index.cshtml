
@model IEnumerable<SellerViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<table class="table table-hover table-striped table-bordered text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Company Name</th>
            <th>Contact Info</th>
            <th>Approved</th>
            <th>Profile Picture</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.CompanyName)</td>
                <td>@Html.DisplayFor(modelItem => item.ContactInfo)</td>
                <td>
                    @if (item.IsApproved)
                    {
                        <a class="btn btn-success btn-sm" asp-area="Admin" asp-controller="Seller" asp-action="Aproved" asp-route-id="@item.Id">Yes</a>
                       
                    }
                    else
                    {
                        <a class="btn btn-danger btn-sm" asp-area="Admin" asp-controller="Seller" asp-action="Aproved" asp-route-id="@item.Id">No</a>
                    }
                </td>
                <td>
                    <img src="@item.ProfilePictureUrl" alt="Profile Picture" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;">
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
